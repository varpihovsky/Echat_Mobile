<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    app:layout_constraintBottom_toBottomOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="-10dp"
        android:background="@color/design_default_color_primary"/>

    <ImageButton
        android:id="@+id/new_chat_button"
        android:layout_width="@dimen/navigation_button_res"
        android:layout_height="@dimen/navigation_button_res"
        android:src="@drawable/ic_baseline_add_24"
        android:adjustViewBounds="true"
        android:layout_marginEnd="@dimen/navigation_button_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/chats_button"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <ImageButton
        android:id="@+id/chats_button"
        android:layout_width="@dimen/navigation_button_res"
        android:layout_height="@dimen/navigation_button_res"
        android:src="@drawable/ic_baseline_chat_24"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toEndOf="@+id/new_chat_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>