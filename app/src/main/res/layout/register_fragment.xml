<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".registration.RegistrationFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageButton
            android:id="@+id/register_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:background="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/register_logotype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Registration"
            android:textSize="32sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/register_edit_text_username"
            app:layout_constraintVertical_chainStyle="packed"/>

        <EditText
            android:id="@+id/register_edit_text_username"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:hint="username"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/register_logotype"
            app:layout_constraintBottom_toTopOf="@+id/register_edit_text_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/register_edit_text_password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:hint="password"
            android:textAlignment="center"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_username"
            app:layout_constraintBottom_toTopOf="@+id/register_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="REGISTER"
            android:textSize="16sp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            app:layout_constraintTop_toBottomOf="@+id/register_edit_text_password"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>