<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:clickable="true">

            <View
                android:id="@+id/room_item_border_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/room_item_border_height"
                android:background="@color/transparent_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/room_item_title"/>

            <TextView
                android:id="@+id/room_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/room_item_title_margin_start"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:text="@string/room_item_sample_title"
                android:textSize="@dimen/medium_title_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_item_border_top"
                app:layout_constraintBottom_toTopOf="@id/room_item_border_bottom"/>

            <View
                android:id="@+id/room_item_border_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/room_item_border_height"
                android:background="@color/transparent_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_item_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>